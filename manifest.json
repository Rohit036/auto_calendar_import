{
  "manifest_version": 3,
  "name": "Auto-Snapshot Calendar Importer",
  "version": "1.0",
  "description": "Imports calendar snapshots into your main calendar.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
